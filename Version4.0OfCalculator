<script>
    function calculate1() {
        var dbp = document.getElementById("dbp").value;
        var sbp = document.getElementById("sbp").value;
        var ysalt=document.getElementById("ysalt").value;
        var radios = document.getElementsByName("sex");
        var gycm =dbp-140;
        var dycm =sbp-80;
        var gycf =dbp-130;
        var dycf =sbp-70;
        for (i=0;i<radios.length;i++){
            if(radios[i].checked===true){
                var sex = radios[i].value;
            }
        }
        if (sex==="male"){
            if ((gycm>0||dycm>0)&&gycm>=dycm){
                var res = Number(ysalt)-Number(gycm)/2;
                var sug = "You need reduce your salt intake";
            } else if ((gycm>0||dycm>0)&&gycm<=dycm) {
                var res = Number(ysalt)-Number(dycm)/2;
                var sug = "You need reduce your salt intake";
            }else {
                var res = 0;
                var sug = "You need not reduce your salt intake";
            }
           
        }else{
            if ((gycf>0||dycf>0)&&gycf>=dycf){
                var res = Number(ysalt)-Number(gycf)/2;
                var sug = "You need reduce your salt intake";
            } else if ((gycf>0||dycf>0)&&gycf<=dycf) {
                var res = Number(ysalt)-Number(dycf)/2;
                var sug = "You need reduce your salt intake";
            }else {
                var res = 0;
                var sug = "You need not reduce your salt intake";
            }
        }
        document.getElementById("feedback").innerHTML= "<p style='text-align: center'>Your Diastolic blood pressure of today：  "+dbp+"<br/>"+
            "<p style='text-align: center'>Systolic blood pressure of today：  "+ sbp+"<br/>"+
            "<p style='text-align: center'>The salt you ate yesterday：  "+ ysalt+"<br/>"+
            "<p style='text-align: center'>Your BP situation:   "+sug+"<br/>"+
            "<p style='text-align: center'>Suggest salt intake for today:  " +res+"<br/>"+
            "<p style='text-align: center'> Other suggestion: You need do more exercises";
    }
    function calculate2() {
        var dbp = document.getElementById("dbp").value;
        var sbp = document.getElementById("sbp").value;
        var ysalt=document.getElementById("ysalt").value;
        var radios = document.getElementsByName("sex");
        var gycm =dbp-140;
        var dycm =sbp-80;
        var gycf =dbp-130;
        var dycf =sbp-70;
        for (i=0;i<radios.length;i++){
            if(radios[i].checked===true){
                var sex = radios[i].value;
            }
        }
        if (sex==="male"){
            if ((gycm>0||dycm>0)&&gycm>=dycm){
                var res = Number(ysalt)-Number(gycm)/2;
                var sug = "You need reduce your salt intake";
            } else if ((gycm>0||dycm>0)&&gycm<=dycm) {
                var res = Number(ysalt)-Number(dycm)/2;
                var sug = "You need reduce your salt intake";
            }else {
                var res = 0;
                var sug = "You need not reduce your salt intake";
            }

        }else{
            if ((gycf>0||dycf>0)&&gycf>=dycf){
                var res = Number(ysalt)-Number(gycf)/2;
                var sug = "You need reduce your salt intake";
            } else if ((gycf>0||dycf>0)&&gycf<=dycf) {
                var res = Number(ysalt)-Number(dycf)/2;
                var sug = "You need reduce your salt intake";
            }else {
                var res = 0;
                var sug = "You need not reduce your salt intake";
            }
        }

        document.write("<h2 style='text-align: center;font-family: Georgia'>Your report</h2>"+
            "<p style='text-align: center'>Your Diastolic blood pressure of today：  "+dbp+"<br/>"+
            "<p style='text-align: center'>Systolic blood pressure of today：  "+ sbp+"<br/>"+
            "<p style='text-align: center'>The salt you ate yesterday：  "+ ysalt+"<br/>"+
            "<p style='text-align: center'>Your BP situation:   "+sug+"<br/>"+
            "<p style='text-align: center'>Suggest salt intake for today:  " +res+"<br/>"+
            "<p style='text-align: center'> Other suggestion: You need do more exercises"+"<br/>"+"<br/>"+
            " <a href=https://nevertoolateteamb23.com/cal/><button style='background: #58a linear-gradient(hsla(0,0%,100%,.2),transparent); padding: .3em .8em;border:1px solid rgba(0,0,0,.1)'>Back to calculator</button></a>"
        );
    }
</script>
